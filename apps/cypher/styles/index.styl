headerHeight = 60
halfHeader = headerHeight/2
thirdHeader = headerHeight/3

cred = #F2627C
cblueDarkest = #445765
cblueDark = #157EBF
cblue = #4AA8E2
cblueLight = #C8EBF3
cgreen = #AFE274
cyellow = #FFFFED

cgrayLightest = #E9ECEF
cgrayLight = #DBE0E5
cgray = #A9AFB4
cgrayMedium = #979A9E
cgrayDark = #7D8185
cgrayDarkest = #6C6D6E

