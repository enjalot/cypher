// ROOM

roomHeight = 650px

.room
  //.new-cypher
  a,a:visited
    color: black
    font-family: Roboto
  a:hover
    color: black

  background-color: #e2e8e9
    
  .room-expand
    max-height: 100%
    overflow: auto
  .room-content
    max-height: roomHeight
    overflow: none

    .primary-cypher
      width: 640px
      height: roomHeight
      float: left

    .right-wrapper
      width: calc(100% - 650px)
      border: 1px solid green
      float:left
      height: roomHeight

    .description
      width: 100%
      height: 100%
      color: black
      float: left

    .video
      display: inline-block
      float:right



  .room-cypher
    float:left
    margin: 5px
    padding: 15px
    background: #f8f8f8

    .name
      line-height:45px

    .make-primary
      float: right
      

  .cyphers
    width: 100%
    height: 100%
    float: left
    clear: left

  .cypher-thumb
    width: 300px
    height: 300px
    .component-renderer
      width: 600px
      height: 600px
      transform: scale(0.5)translate(-50%, -50%)

    .iframe
      min-height: 0
